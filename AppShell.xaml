<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CollectionsManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CollectionsManager.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="CollectionsManager">

    <ShellContent
        Title="Lista kolekcji"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="home" />

    <ShellContent
        Title="Dodaj kolekcję"
        ContentTemplate="{DataTemplate pages:NewCollectionPage}"
        Route="newcollection" />

    <ShellContent
        Title="Edycja kolekcji"
        ContentTemplate="{DataTemplate pages:UpdateCollectionPage}"
        Route="updatecollection" />

    <ShellContent
        Title="Lista przedmiotów"
        ContentTemplate="{DataTemplate pages:CollectionItemsList}"
        Route="itemslist" />

    <ShellContent
        Title="Dodaj przedmiot"
        ContentTemplate="{DataTemplate pages:NewCollectionItemPage}"
        Route="newitem" />

    <ShellContent
        Title="Edytuj przedmiot"
        ContentTemplate="{DataTemplate pages:UpdateCollectionItemPage}"
        Route="updateitem" />

    <ShellContent
        Title="Podsumowanie kolekcji"
        ContentTemplate="{DataTemplate pages:CollectionSummary}"
        Route="summary" />

</Shell>
